# Копируйте этот файл как .env и настройте значения

# Django настройки
DEBUG=1
SECRET_KEY=django-insecure-your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# База данных
DATABASE_URL=sqlite:///app/db.sqlite3
# Для PostgreSQL: DATABASE_URL=postgres://journal_user:journal_password@db:5432/journal_db

# Email настройки (для продакшена)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=1

# Статические файлы
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles